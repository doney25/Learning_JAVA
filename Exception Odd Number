import java.util.*;
class oddNumber{
  public static void main(String args[]){
    Scanner sc = new Scanner(System.in);
    System.out.println("Enter a number:");
    int num = sc.nextInt();
    if(num%2==1){
        throw new ArithmeticException("This number is odd");
    }
    else {
      System.out.println("The number is even");
    }
  }    
}
